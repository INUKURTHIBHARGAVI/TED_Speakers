{%- macro infobox(BookName, author, publisher,LANG_CODE,PLACE_OF_PUB,YEAR_OF_PUB) -%}
	{{'{{Infobox BookName'}}
		| BookName		= {{BookName}}
		| Author	= {{author}}
		| Language     = {{LANG_CODE}}
		| Publisher		= {{publisher}}
		| Publishingplace   =   {{PLACE_OF_PUB}}
		| year       =   {{YEAR_OF_PUB}}
		
		
	{{'}}\n'}}
{%- endmacro -%}

{%- macro Intro(BookName,author,LANG_CODE)-%}
{%- set line =[
			BookName + " అనే పుస్తకం  " +author+" గారు వ్రాసారు . "+
			"ఈ పుస్తకం  " + LANG_CODE +"భాషలోనిది ." , "ఈ పుస్తకం పేరు "+ BookName + " ."+ "ఈ పుస్తకం  " + LANG_CODE +"భాషలోనిది ."
		]|random
	-%}
	{{line}}

{%- endmacro -%}

{%- macro History(BookName,author,publisher,PLACE_OF_PUB,YEAR_OF_PUB) -%} {#Add more sentences based on review#}
    
   

	{%- if publisher != 'nan' -%}
        {%- set line1= [author +" గారు వ్రాసిన  "+BookName+" పుస్తకానికి   "+publisher+" ప్రచురణకర్తగా నిలిచింది ."  ] |join('') -%}
        {{ [ line1 ] | random }}
    {%- endif -%}

	 {%- if PLACE_OF_PUB!= 'nan' -%}
        {%- set line1= [" ఈ పుస్తకం మొట్టమొదటిసారిగా "+PLACE_OF_PUB+"లో ప్రచురించబడింది . " , PLACE_OF_PUB + " లో ఈ పుస్తకం మొదటి సారిగా ప్రచురించబడింది ." ] |join('') -%}
	    {{ [ line1] | random }}
	
    {%- endif -%}
    
    {%- if YEAR_OF_PUB!= 'nan' -%}
        {%- set line1= [" ఈ పుస్తకాన్ని "+ YEAR_OF_PUB + " సంవత్సరంలో ప్రచురించారు  . " , YEAR_OF_PUB + " సంవత్సరంలో ఈ పుస్తకం ముద్రపడింది ." ] |join('') -%}
	    {{ [ line1] | random }}
	
    {%- endif -%}

{%- endmacro -%}

{%- macro About(BookName,PAGINATION,ISBN,ITEM_RUPEES,author) -%} {#Add more sentences based on review#}
    
   {%- if PAGINATION != 'nan' -%}
        {%- set line1= [author +" గారు రచించిన  "+BookName+" పుస్తకంలో  "+PAGINATION+" పేజీలు ఉన్నాయి  ." ] |join('') -%}
        {{ [ line1 ] | random }}
    {%- endif -%}

   {%- if ISBN != 'nan' -%}
        {%- set line1= [" ఈ పుస్తకం యొక్క అంతర్జాతీయ ప్రామాణిక పుస్తక సంఖ్య "+ ISBN + "."] |join('') -%}
        {{ [ line1 ] | random }}
    {%- endif -%}

  {%- if ITEM_RUPEES != 'nan' -%}
        {%- set line1= ["ఈ పుస్తకం యొక్క ధర  " + ITEM_RUPEES + " రూపాయిలు ."  ] |join('') -%}
        {{ [ line1 ] | random }}
    {%- endif -%}


{%- endmacro -%}


